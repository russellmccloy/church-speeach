@{
}
@{
    ViewData["Title"] = "Upload MP3";
}

<h2>@ViewData["Title"]</h2>

@if (ViewData["Message"] != null)
{
    <div class="alert alert-info">
        @ViewData["Message"]
    </div>
}

@if (ViewData["FilePath"] != null)
{
    <a href="@ViewData["FilePath"]" class="btn btn-primary" download>Download WAV File</a>
}


<form asp-action="Upload" asp-controller="ConvertFile" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="mp3File">Select MP3 file to upload:</label>
        <input type="file" name="mp3File" id="mp3File" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Convert mp3 to WAV format</button>
</form>
